---
interface Props {
  platform: string;
  username: string;
}

import instagram from "/instagram.svg";
import facebook from "/facebook.svg";
import youtube from "/youtube.svg";

const { platform, username } = Astro.props;
---

<a
  class="appearance-none flex justify-center items-center py-2 my-4 px-2 text-white"
  href={`https://www.${platform}.com/${username}`}
>
  <img
    class="w-8 text-white"
    src={platform === "facebook"
      ? facebook
      : platform === "instagram"
      ? instagram
      : youtube}
    alt={`${platform} icon`}
  />
</a>