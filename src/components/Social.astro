---
interface Props {
    platform: string;
    username: string;
}

const { platform, username } = Astro.props;
---

<a class="appearance-none py-2 my-4 px-4 bg-transparent border-2 uppercase text-white font-semibold shadow-md hover:bg-red-700 hover:border-transparent hover:text-white focus:outline-none focus:ring-2 focus:ring-red-400 focus:ring-opacity-75" href={`https://www.${platform}.com/${username}`}>{platform}</a>
