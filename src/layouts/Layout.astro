---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import BookingsStrip from "../components/BookingsStrip.astro";
import PreFooter from "../components/PreFooter.astro";
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="Ras Jahknow – Roots Rock Reggae Melbourne Australia – Cape Verde. Book Melbourne's hottest reggae band! Available for all types of events. We play original songs as well as all your favorite Bob Marley classics!"
    />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title} | Roots Reggae Band Melbourne, Australia</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Fira+Sans:wght@400;600;700&family=Open+Sans:ital,wght@0,300;0,400;0,500;0,600;0,700;0,800;1,300;1,400;1,500;1,600;1,700&display=swap"
      rel="stylesheet"
    />
  </head>
  <body>
    <Header />
    <!-- START INNER PAGE CONTENT <MAIN> -->
    <slot />
    <!-- END INNER PAGE CONTENT <MAIN> -->
    <footer>
      <PreFooter />
      <BookingsStrip />
      <Footer />
    </footer>
    <script
      is:inline
      src="https://cdnjs.cloudflare.com/ajax/libs/flowbite/1.7.0/flowbite.min.js"
    ></script>
  </body>
</html>

<style is:global>
  :root {
    --primary: black;
    --secondary: #e65454;
  }
  a,
  button {
    transition: all 0.2s ease-in-out;
  }
  p {
    margin-bottom: 1.5rem !important;
    line-height: 1.5;
  }
  li p {
    margin-bottom: 1.25rem !important;
    line-height: 1 !important;
  }
</style>
