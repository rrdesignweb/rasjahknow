---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import BookingsStrip from "../components/BookingsStrip.astro";
import PreFooter from "../components/PreFooter.astro";
interface Props {
  title: string;
  canonicalURL?: string;
}

const { title, canonicalURL = Astro.url } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <!-- Google tag (gtag.js) -->
    <script
      type="text/partytown"
      async
      src="https://www.googletagmanager.com/gtag/js?id=G-NTXRHPQ2LG"></script>
    <script type="text/partytown">
      window.dataLayer = window.dataLayer || [];
      function gtag() {
        dataLayer.push(arguments);
      }
      gtag("js", new Date());

      gtag("config", "G-NTXRHPQ2LG");
    </script>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="Looking for reggae music in Melbourne? Ras Jahknow brings authentic reggae to Melbourne's bars and venues. Book Melbourne's hottest reggae band for your event."
    />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="canonical" href={canonicalURL} />
    <meta name="generator" content={Astro.generator} />
    <meta
      property="og:title"
      content="Ras Jahknow | Roots Reggae Band Melbourne, Australia"
    />
    <meta
      property="og:description"
      content="Book Melbourne's hottest reggae band for your next event!"
    />
    <meta
      property="og:image"
      content="https://images.ctfassets.net/r5gmd7dg6irv/SV1aOpwv6FYpTWw4TojmG/6a6f2b01da10f4faa123c35220e73564/carousel-0.jpeg"
    />
    <meta property="og:url" content="https://www.rasjahknow.com/" />
    <meta name="robots" content="index, follow" />
    <title>{title} | Roots Reggae Band Melbourne, Australia</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      rel="preload"
      href="https://fonts.googleapis.com/css2?family=Fira+Sans:wght@400;600;700&family=Open+Sans:ital,wght@0,300;0,400;0,500;0,600;0,700;0,800;1,300;1,400;1,500;1,600;1,700&display=swap"
      as="style"
      onload="this.onload=null;this.rel='stylesheet'"
    />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <noscript>
      <link
        href="https://fonts.googleapis.com/css2?family=Fira+Sans:wght@400;600;700&family=Open+Sans:ital,wght@0,300;0,400;0,500;0,600;0,700;0,800;1,300;1,400;1,500;1,600;1,700&display=swap"
        rel="stylesheet"
        type="text/css"
      />
    </noscript>
    <script type="application/ld+json">
      {
        "@context": "http://schema.org",
        "@type": "MusicGroup",
        "name": "Ras Jahknow",
        "genre": "Reggae",
        "url": "https://www.rasjahknow.com/",
        "member": [
          {
            "@type": "Person",
            "name": "Ras Jahknow"
          }
        ]
      }
    </script>
  </head>
  <body>
    <Header />
    <main>
      <slot />
    </main>
    <footer>
      <PreFooter />
      <BookingsStrip />
      <Footer />
    </footer>
    <script
      is:inline
      src="https://cdnjs.cloudflare.com/ajax/libs/flowbite/1.7.0/flowbite.min.js"
    ></script>
  </body>
</html>

<style is:global>
  :root {
    --primary: black;
    --secondary: #e65454;
  }
  a,
  button {
    transition: all 0.2s ease-in-out;
  }
  p {
    margin-bottom: 1.5rem !important;
    line-height: 1.5;
  }
  li p {
    margin-bottom: 1.25rem !important;
    line-height: 1 !important;
  }
</style>
